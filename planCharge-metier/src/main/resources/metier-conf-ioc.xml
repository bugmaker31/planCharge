<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
         http://www.springframework.org/schema/context
         http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="fr.gouv.agriculture.dal.ct.planCharge.metier" />
    <context:property-override location="metier-conf.properties" />

    <bean id="contexte" class="fr.gouv.agriculture.dal.ct.planCharge.metier.Contexte" scope="singleton">
        <!--Au lieu d'injecter la valeur de la variable Maven dans ce fichier, on l'injecte dans le fichier "metier-conf.properties" (+ propre) :-->
        <!--<property name="applicationVersion" value="${project.version}" />-->
    </bean>

    <bean id="planChargeService" class="fr.gouv.agriculture.dal.ct.planCharge.metier.service.PlanChargeService"
          scope="singleton" />

    <bean id="planChargeDao" class="fr.gouv.agriculture.dal.ct.planCharge.metier.dao.charge.PlanChargeDao"
          scope="singleton">
        <property name="repPersistance" value="./donnees/" />
        <property name="patronFicPersistance" value="planCharge_{dateEtat}" />
    </bean>

    <bean id="planChargeWrapper" class="fr.gouv.agriculture.dal.ct.planCharge.metier.dao.charge.PlanChargeWrapper" scope="singleton" />

</beans>
