<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
         http://www.springframework.org/schema/context
         http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>

    <bean id="planChargeService" class="fr.gouv.agriculture.dal.ct.planCharge.metier.service.PlanChargeService"
          scope="singleton" />

    <bean id="planChargeDao" class="fr.gouv.agriculture.dal.ct.planCharge.metier.dao.charge.PlanChargeDao"
          scope="singleton">
        <property name="repPersistanceDonnees" value="./donnees/" />
        <property name="patronFicPersistanceDonnees" value="planCharge_{dateEtat}" />
    </bean>

</beans>
