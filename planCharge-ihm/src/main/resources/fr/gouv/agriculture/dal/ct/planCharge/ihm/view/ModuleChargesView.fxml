<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.gouv.agriculture.dal.ct.planCharge.ihm.controller.ModuleChargesController">

    <stylesheets>
        <URL value="@/css/main.css"/>
    </stylesheets>

    <top>
        <VBox>
            <Accordion BorderPane.alignment="CENTER">
                <panes>
                    <TitledPane animated="false" text="Paramètres">
                        <GridPane>
                            <Label text="Date d'état : "/>
                            <DatePicker fx:id="dateEtatPicker" onAction="#definirDateEtat"
                                        GridPane.columnIndex="2"/> <!--TODO FDA 2017/04 Ne permettre de sélectionner que des lundis (?)-->
                            <Button onAction="#positionnerDateEtatAuProchainLundi" text="Lundi prochain"
                                    GridPane.columnIndex="3"/>
                        </GridPane>
                    </TitledPane>
                </panes>
            </Accordion>
            <Accordion BorderPane.alignment="CENTER">
                <panes>
                    <TitledPane animated="false" text="Filtres">
                        <AnchorPane>
                            <BorderPane>
                                <right>
                                    <Button mnemonicParsing="false" text="RAZ"
                                            onAction="#razFiltres"
                                            BorderPane.alignment="CENTER"
                                            styleClass="erase-button"
                                    />
                                </right>
                                <center>
                                    <VBox BorderPane.alignment="CENTER">
                                        <GridPane>
                                            <columnConstraints>
                                                <ColumnConstraints/>
                                                <ColumnConstraints/>
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints/>
                                            </rowConstraints>
                                            <Label text="Filtre global : "/>
                                            <TextField fx:id="filtreGlobalField"
                                                       GridPane.columnIndex="1"/>
                                        </GridPane>
                                        <HBox>
                                            <CheckComboBox fx:id="filtreCategoriesField" prefWidth="50.0"/>
                                            <CheckComboBox fx:id="filtreSousCategoriesField" prefWidth="50.0"/>
                                            <TextField fx:id="filtreNoTacheField" prefWidth="50.0"/>
                                            <TextField fx:id="filtreNoTicketIdalField"
                                                       prefWidth="70.0"/>
                                            <TextField fx:id="filtreDescriptionField"
                                                       prefWidth="300.0"/>
                                            <CheckComboBox fx:id="filtreProjetsApplisField"
                                                           prefWidth="100.0"/>
                                            <DatePicker fx:id="filtreDebutField" prefWidth="75.0"/>
                                            <DatePicker fx:id="filtreEcheanceField" prefWidth="75.0"/>
                                            <CheckComboBox fx:id="filtreImportancesField"
                                                           prefWidth="75.0"/>
                                            <TextField fx:id="filtreChargeField" prefWidth="50.0"/>
                                            <CheckComboBox fx:id="filtreRessourcesField"
                                                           prefWidth="75.0"/>
                                            <CheckComboBox fx:id="filtreProfilsField" prefWidth="75.0"/>
                                        </HBox>
                                    </VBox>
                                </center>
                            </BorderPane>
                        </AnchorPane>
                    </TitledPane>
                </panes>
            </Accordion>
        </VBox>
    </top>
    <center>
        <TableView fx:id="tachesTable" editable="true" tableMenuButtonVisible="true"
                   BorderPane.alignment="CENTER">
            <columns>
                <TableColumn text="Catégories" visible="false">
                    <columns>
                        <TableColumn fx:id="categorieColumn" text="Catégorie" editable="false" styleClass="non-modifiable" prefWidth="60" visible="false"/>
                        <TableColumn fx:id="sousCategorieColumn" text="Sous-catégorie" editable="false" styleClass="non-modifiable"  prefWidth="100" visible="false"
                                     >
                            <graphic>
                                <Label text="Sous-catégorie" wrapText="true"/>
                            </graphic>
                        </TableColumn>
                    </columns>
                </TableColumn>
                <TableColumn fx:id="noTacheColumn" editable="false" styleClass="non-modifiable" prefWidth="55.0" text="N° tâche"/>
                <TableColumn fx:id="noTicketIdalColumn" text="N° IDAL"/>
                <TableColumn fx:id="descriptionColumn" prefWidth="300.0" text="Description"/>
                <TableColumn fx:id="projetAppliColumn" prefWidth="100.0" text="Projet/Appli"/>
                <TableColumn text="Période souhaitée">
                    <columns>
                        <TableColumn fx:id="debutColumn" prefWidth="75.0" text="Début"/>
                        <TableColumn fx:id="echeanceColumn" prefWidth="75.0" text="Echéance"/>
                    </columns>
                </TableColumn>
                <TableColumn fx:id="importanceColumn" prefWidth="75.0" text="Importance"/>
                <TableColumn fx:id="chargeColumn" prefWidth="50.0" text="Charge"/>
                <TableColumn fx:id="ressourceColumn" prefWidth="40.0" text="Rsrc"/>
                <TableColumn fx:id="profilColumn" prefWidth="50.0" text="Profil"/>
                <TableColumn text="Planification">
                    <columns>
                        <TableColumn fx:id="semaine1Column" prefWidth="35.0" text="S+1"/>
                        <TableColumn fx:id="semaine2Column" prefWidth="35.0" text="S+2"/>
                        <TableColumn fx:id="semaine3Column" prefWidth="35.0" text="S+3"/>
                        <TableColumn fx:id="semaine4Column" prefWidth="35.0" text="S+4"/>
                        <TableColumn fx:id="semaine5Column" prefWidth="35.0" text="S+5"/>
                        <TableColumn fx:id="semaine6Column" prefWidth="35.0" text="S+6"/>
                        <TableColumn fx:id="semaine7Column" prefWidth="35.0" text="S+7"/>
                        <TableColumn fx:id="semaine8Column" prefWidth="35.0" text="S+8"/>
                        <TableColumn fx:id="semaine9Column" prefWidth="35.0" text="S+9"/>
                        <TableColumn fx:id="semaine10Column" prefWidth="35.0" text="S+10"/>
                        <TableColumn fx:id="semaine11Column" prefWidth="35.0" text="S+11"/>
                        <TableColumn fx:id="semaine12Column" prefWidth="35.0" text="S+12"/>
                    </columns>
                </TableColumn>
                <TableColumn fx:id="chargePlanifieeColumn" editable="false" styleClass="non-modifiable" prefWidth="50.0">
                    <graphic>
                        <Label text="Charge planifiée" wrapText="true"  />
                    </graphic>
                </TableColumn>
            </columns>
        </TableView>
    </center>
    <bottom>
        <AnchorPane BorderPane.alignment="CENTER">
            <Button alignment="BASELINE_CENTER" mnemonicParsing="false" onAction="#ajouterTache"
                    text="Ajouter une tâche"/>
        </AnchorPane>
    </bottom>
</BorderPane>
