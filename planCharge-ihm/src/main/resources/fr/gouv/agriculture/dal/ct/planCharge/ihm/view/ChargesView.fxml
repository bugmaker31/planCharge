<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>


<?import java.lang.Double?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.gouv.agriculture.dal.ct.planCharge.ihm.controller.ChargesController"
            AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
>
    <fx:define>
        <Double fx:id="descriptionFieldPrefWidth" fx:value="500"/>
        <!--TODO FDA 2017/07 Continuer à paramétrer les prefWidth.-->
    </fx:define>
    <top>
        <VBox>
            <Accordion>
                <panes>
                    <TitledPane animated="false" text="Filtres">
                        <HBox>
                            <VBox>
                                <HBox>
                                    <Label text="Filtre global : "/>
                                    <TextField fx:id="filtreGlobalField" promptText="filtre sur tout" prefWidth="200">
                                        <tooltip>
                                            <Tooltip
                                                    text="Filtre les tâches sur n'importe quelle colonne. Expression régulière acceptée."/>
                                        </tooltip>
                                    </TextField>
                                </HBox>
                                <HBox>
                                    <CheckComboBox fx:id="filtreCategoriesField" prefWidth="50">
                                        <tooltip>
                                            <!--FIXME FDA 2017/07 Non affiché (même en codant en Java). Bug dans ControlsFX ?-->
                                            <Tooltip text="Filtre les tâches sur leur catégorie."/>
                                        </tooltip>
                                    </CheckComboBox>
                                    <CheckComboBox fx:id="filtreSousCategoriesField" prefWidth="50"/>
                                    <TextField fx:id="filtreNoTacheField" prefWidth="50">
                                        <tooltip>
                                            <Tooltip text="Filtre les tâches sur le numéro (l'ID)."/>
                                        </tooltip>
                                    </TextField>
                                    <TextField fx:id="filtreNoTicketIdalField" prefWidth="70">
                                        <tooltip>
                                            <Tooltip text="Filtre les tâches sur le numéro de ticket IDAL."/>
                                        </tooltip>
                                    </TextField>
                                    <TextField fx:id="filtreDescriptionField" promptText="filtre sur description"
                                               prefWidth="$descriptionFieldPrefWidth">
                                        <tooltip>
                                            <Tooltip
                                                    text="Filtre les tâches sur la description. Expression régulière acceptée."/>
                                        </tooltip>
                                    </TextField>
                                    <CheckComboBox fx:id="filtreProjetsApplisField"
                                                   prefWidth="100.0"/>
                                    <DatePicker fx:id="filtreDebutField" prefWidth="100" showWeekNumbers="true"/>
                                    <DatePicker fx:id="filtreEcheanceField" prefWidth="100" showWeekNumbers="true"/>
                                    <CheckComboBox fx:id="filtreImportancesField"
                                                   prefWidth="75.0"/>
                                    <TextField fx:id="filtreChargeField" prefWidth="50.0"/>
                                    <CheckComboBox fx:id="filtreRessourcesField"
                                                   prefWidth="75.0"/>
                                    <CheckComboBox fx:id="filtreProfilsField" prefWidth="75.0"/>
                                </HBox>
                            </VBox>
                            <SegmentedButton>
                                <buttons>
                                    <fx:define>
                                        <ToggleGroup fx:id="filtreSelonPlanificationToggleGroup"/>
                                    </fx:define>
                                    <!--TODO FDA 2017/07 Coder l'action.-->
                                    <ToggleButton text="Toutes" mnemonicParsing="false" selected="true"
                                                  toggleGroup="$filtreSelonPlanificationToggleGroup"/>
                                    <ToggleButton text="Planifiées dans le mois" mnemonicParsing="false"
                                                  toggleGroup="$filtreSelonPlanificationToggleGroup"
                                                  onAction="#filtrerTachesNonPlanifieesDansLeMois"
                                    />
                                    <!--TODO FDA 2017/07 Coder l'action.-->
                                    <ToggleButton text="Demandées dans le semestre" mnemonicParsing="false"
                                                  toggleGroup="$filtreSelonPlanificationToggleGroup"/>
                                </buttons>
                            </SegmentedButton>
                            <Button text="RAZ"
                                    onAction="#razFiltres"
                                    styleClass="erase-button"
                                    alignment="CENTER_RIGHT"
                            />
                        </HBox>
                    </TitledPane>
                </panes>
            </Accordion>
        </VBox>
    </top>
    <center>
        <TableView fx:id="planificationsTable" editable="true" tableMenuButtonVisible="true"
                   BorderPane.alignment="CENTER"
                   styleClass="charge-cell"
        >
            <!--contextMenu="tachesTableContextMenu">-->
            <columns>
                <TableColumn text="Tâche">

                    <!--TODO FDA 2017/07 Factoriser les colonnes communes à ModuleChargesView et à ModuleTachesView (include ?).-->

                    <columns>
                        <!--Rq : Ne pas mettre "visible="false" sur cette colonne, sinon le menu permettant à l'utilisateur de sélectionner les colonne visibles/masquées ("+") ne permet plus d'afficher les 2 sous-colonnes.-->
                        <TableColumn text="Catégories">
                            <columns>
                                <TableColumn fx:id="categorieColumn" text="Catégorie" prefWidth="60" visible="false"/>
                                <!--TODO FDA 2017/05 Trouver pourquoi le libellé de l'entête de la colonne ne revient pas à la ligne, malgré le "wrap-text=true".-->
                                <TableColumn fx:id="sousCategorieColumn" text="Sous-catégorie" prefWidth="100"
                                             visible="false" style="-fx-wrap-text: true"/>
                            </columns>
                        </TableColumn>
                        <TableColumn fx:id="noTacheColumn" text="N°" prefWidth="55"
                                     editable="false" styleClass="non-modifiable"/>
                        <TableColumn fx:id="noTicketIdalColumn" text="N° IDAL"/>
                        <TableColumn fx:id="descriptionColumn" prefWidth="$descriptionFieldPrefWidth"
                                     text="Description"/>
                        <TableColumn fx:id="projetAppliColumn" prefWidth="100" text="Projet/Appli"/>
                        <TableColumn fx:id="statutColumn" prefWidth="75" text="Statut"/>
                        <TableColumn text="Période souhaitée">
                            <columns>
                                <TableColumn fx:id="debutColumn" prefWidth="100" text="Début"/>
                                <TableColumn fx:id="echeanceColumn" prefWidth="100" text="Echéance"/>
                            </columns>
                        </TableColumn>
                        <TableColumn fx:id="importanceColumn" prefWidth="75.0" text="Importance"/>
                        <TableColumn fx:id="chargeColumn" prefWidth="50.0" text="Charge"/>
                        <TableColumn fx:id="ressourceColumn" prefWidth="40.0" text="Rsrc"/>
                        <TableColumn fx:id="profilColumn" prefWidth="50.0" text="Profil"/>
                    </columns>
                </TableColumn>
                <TableColumn text="Planification">
                    <columns>
                        <TableColumn fx:id="semaine1Column" prefWidth="35.0" text="S+1" styleClass="periodeChargee"/>
                        <TableColumn fx:id="semaine2Column" prefWidth="35.0" text="S+2" styleClass="periodeChargee"/>
                        <TableColumn fx:id="semaine3Column" prefWidth="35.0" text="S+3" styleClass="periodeChargee"/>
                        <TableColumn fx:id="semaine4Column" prefWidth="35.0" text="S+4" styleClass="periodeChargee"/>
                        <TableColumn fx:id="semaine5Column" prefWidth="35.0" text="S+5" styleClass="periodeChargee"/>
                        <TableColumn fx:id="semaine6Column" prefWidth="35.0" text="S+6" styleClass="periodeChargee"/>
                        <TableColumn fx:id="semaine7Column" prefWidth="35.0" text="S+7" styleClass="periodeChargee"/>
                        <TableColumn fx:id="semaine8Column" prefWidth="35.0" text="S+8" styleClass="periodeChargee"/>
                        <TableColumn fx:id="semaine9Column" prefWidth="35.0" text="S+9" styleClass="periodeChargee"/>
                        <TableColumn fx:id="semaine10Column" prefWidth="35.0" text="S+10" styleClass="periodeChargee"/>
                        <TableColumn fx:id="semaine11Column" prefWidth="35.0" text="S+11" styleClass="periodeChargee"/>
                        <TableColumn fx:id="semaine12Column" prefWidth="35.0" text="S+12" styleClass="periodeChargee"/>

                        <!--TODO FDA 2017/05 Trouver pourquoi le libellé de l'entête de la colonne ne revient pas à la ligne, malgré le "wrap-text=true".-->
                        <TableColumn fx:id="chargePlanifieeColumn" text="Charge planifiée" prefWidth="50.0"
                                     editable="false" styleClass="non-modifiable" style="-fx-wrap-text: true"/>
                        <!--
                            Le libellé de l'entête de la colonne revient bien à la ligne, mais maintenant le libellé de la colonne n'apparâit plus dans le bouton "+"
                            qui sert à l'utilisateur pour afficher/masquer des colonnes.
                            <TableColumn fx:id="chargePlanifieeColumn" editable="false" prefWidth="50.0">
                                <graphic>
                                    <Label text="Charge planifiée" wrapText="true" />
                                </graphic>
                            </TableColumn>
                        -->
                    </columns>
                </TableColumn>
            </columns>
            <!--Rq : Le tag "sortOrder" doit arriver après les tags "TableColumn" qu'il référence, sinon erreur du load du FXML !-->
            <sortOrder>
                <fx:reference source="categorieColumn"/>
                <fx:reference source="sousCategorieColumn"/>
                <fx:reference source="projetAppliColumn"/>
                <fx:reference source="echeanceColumn"/>
                <fx:reference source="descriptionColumn"/>
            </sortOrder>
        </TableView>
    </center>
    <bottom>
        <AnchorPane>
            <ButtonBar>
                <buttons>
                    <Button text="_Ajouter une tâche" onAction="#ajouterTache"/>
                </buttons>
            </ButtonBar>
        </AnchorPane>
    </bottom>
</BorderPane>
