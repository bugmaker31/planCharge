<?xml version="1.0" encoding="UTF-8"?>


<?import fr.gouv.agriculture.dal.ct.planCharge.ihm.view.component.FiltreGlobalTachesComponent?>
<?import fr.gouv.agriculture.dal.ct.planCharge.ihm.view.TableViewAvecCalendrier?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>
<?import java.lang.*?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.gouv.agriculture.dal.ct.planCharge.ihm.controller.ChargesController"
            AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
            AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
>
    <top>
        <VBox>
            <!--suppress JavaFxUnresolvedFxIdReference -->
            <Accordion fx:id="filtresAccordion">
                <panes>
                    <!--suppress JavaFxUnresolvedFxIdReference -->
                    <TitledPane fx:id="filtresPane" animated="false" text="Filtres">
                        <HBox spacing="2" alignment="CENTER_LEFT">
                            <FiltreGlobalTachesComponent fx:id="filtreGlobalComponent" accordion="$filtresAccordion"
                                                         titledPane="$filtresPane"/>
                            <VBox alignment="CENTER_LEFT">
                                <VBox alignment="CENTER" style="-fx-border-color: darkgray;">
                                    <Label text="Catégorie : "/>
                                    <SegmentedButton>
                                        <buttons>
                                            <ToggleButton text="Tout" onAction="#filtrer" fx:id="filtreCategorieToutToggleButton"/>
                                            <ToggleButton text="Projet" fx:id="filtreCategorieProjetToggleButton" onAction="#filtrer"/>
                                            <ToggleButton text="Service" fx:id="filtreCategorieServiceToggleButton" onAction="#filtrer"/>
                                            <ToggleButton text="Organisation" fx:id="filtreCategorieOrganisationToggleButton" onAction="#filtrer"/>
                                        </buttons>
                                    </SegmentedButton>
                                </VBox>
                                <VBox alignment="CENTER" style="-fx-border-color: darkgray;">
                                    <Label text="Statut : "/>
                                    <SegmentedButton>
                                        <buttons>
                                            <ToggleButton text="Tout" fx:id="filtreStatutToutToggleButton" onAction="#filtrer"/>
                                            <ToggleButton text="Nouveau" fx:id="filtreStatutNouveauToggleButton" onAction="#filtrer"/>
                                            <ToggleButton text="En cours" fx:id="filtreStatutEnCoursToggleButton" onAction="#filtrer"/>
                                            <ToggleButton text="En attente" fx:id="filtreStatutEnAttenteToggleButton" onAction="#filtrer"/>
                                            <ToggleButton text="Récurrent" fx:id="filtreStatutRecurrentToggleButton" onAction="#filtrer"/>
                                            <ToggleButton text="Reporté" fx:id="filtreStatutReporteToggleButton" onAction="#filtrer"/>
                                            <ToggleButton text="Clos" fx:id="filtreStatutClosToggleButton" onAction="#filtrer"/>
                                        </buttons>
                                    </SegmentedButton>
                                </VBox>
                                <VBox alignment="CENTER" style="-fx-border-color: darkgray;">
                                    <Label text="Période : "/>
                                    <SegmentedButton>
                                        <buttons>
                                            <ToggleButton text="Tout" fx:id="filtrePeriodeToutToggleButton" onAction="#filtrer"/>
                                            <ToggleButton text="Echue" fx:id="filtrePeriodeEchueToggleButton" onAction="#filtrer"/>
                                        </buttons>
                                    </SegmentedButton>
                                </VBox>
                                <VBox alignment="CENTER" style="-fx-border-color: darkgray;">
                                    <Label text="Planification : "/>
                                    <SegmentedButton>
                                        <buttons>
                                            <ToggleButton text="Tout" onAction="#filtrer"/>
                                            <ToggleButton text="Non planifiée entièrement" onAction="#filtrer"/>
                                            <ToggleButton text="Planifiée dans le mois" onAction="#filtrer"/>
                                            <ToggleButton text="Demandée dans le semestre" onAction="#filtrer"/>
                                        </buttons>
                                    </SegmentedButton>
                                </VBox>
                                <VBox alignment="CENTER" style="-fx-border-color: darkgray;">
                                    <Label text="Surcharge : "/>
                                    <SegmentedButton>
                                        <buttons>
                                            <ToggleButton text="Tout" onAction="#filtrer"/>
                                            <ToggleButton text="Avec ressource surchargée" onAction="#filtrer"/>
                                            <ToggleButton text="Avec profil surchargé" onAction="#filtrer"/>
                                        </buttons>
                                    </SegmentedButton>
                                </VBox>
                            </VBox>
                            <Button text="RAZ" onAction="#razFiltres" styleClass="erase-button"/>
                        </HBox>
                    </TitledPane>
                </panes>
            </Accordion>
        </VBox>
    </top>
    <center>
        <!--TODO FDA 2017/08 Factoriser pour ne plus avoir à dupliquer dans ChargesView.fxml.-->
        <fx:define>
            <Double fx:id="categorieColumnPrefWidth" fx:value="60"/>
            <Double fx:id="sousCategorieColumnPrefWidth" fx:value="100"/>
            <Double fx:id="noTacheColumnPrefWidth" fx:value="55"/>
            <Double fx:id="noTicketIdalColumnPrefWidth" fx:value="80"/>
            <Double fx:id="projetAppliColumnPrefWidth" fx:value="100"/>
            <Double fx:id="statutColumnPrefWidth" fx:value="75"/>
            <Double fx:id="debutColumnPrefWidth" fx:value="80"/>
            <Double fx:id="echeanceColumnPrefWidth" fx:value="80"/>
            <Double fx:id="importanceColumnPrefWidth" fx:value="75"/>
            <Double fx:id="chargeColumnPrefWidth" fx:value="50"/>
            <Double fx:id="ressourceColumnPrefWidth" fx:value="40"/>
            <Double fx:id="profilColumnPrefWidth" fx:value="60"/>
        </fx:define>
        <fx:define>
            <Double fx:id="semaineColumnPrefWidth" fx:value="50"/>
        </fx:define>
        <TableViewAvecCalendrier fx:id="planificationsTable" editable="true" tableMenuButtonVisible="true">
            <columns>
                <TableColumn text="Tâche">

                    <!--TODO FDA 2017/07 Factoriser les colonnes communes à ModuleChargesView et à ModuleTachesView (include ?).-->

                    <columns>
                        <!--Rq : Ne pas mettre "visible="false" sur cette colonne, sinon le menu permettant à l'utilisateur de sélectionner les colonne visibles/masquées ("+") ne permet plus d'afficher les 2 sous-colonnes.-->
                        <TableColumn text="Catégories">
                            <columns>
                                <TableColumn fx:id="categorieColumn" text="Catégorie"
                                             prefWidth="$categorieColumnPrefWidth" visible="false"/>
                                <!--TODO FDA 2017/05 Trouver pourquoi le libellé de l'entête de la colonne ne revient pas à la ligne, malgré le "wrap-text=true".-->
                                <TableColumn fx:id="sousCategorieColumn" text="Sous-catégorie"
                                             prefWidth="$sousCategorieColumnPrefWidth"
                                             visible="false" style="-fx-wrap-text: true"/>
                            </columns>
                        </TableColumn>
                        <TableColumn fx:id="noTacheColumn" text="N°" prefWidth="$noTacheColumnPrefWidth"
                                     editable="false" styleClass="nonModifiable"/>
                        <TableColumn fx:id="noTicketIdalColumn" text="N° IDAL"
                                     prefWidth="$noTicketIdalColumnPrefWidth"/>
                        <TableColumn fx:id="descriptionColumn" prefWidth="400"
                                     text="Description" styleClass="description-column"/>
                        <TableColumn fx:id="projetAppliColumn" prefWidth="$projetAppliColumnPrefWidth"
                                     text="Projet/Appli"
                                     styleClass="projetAppli-column"/>
                        <TableColumn fx:id="statutColumn" prefWidth="$statutColumnPrefWidth" text="Statut"
                                     visible="false"/>
                        <TableColumn text="Période souhaitée">
                            <columns>
                                <TableColumn fx:id="debutColumn" prefWidth="$debutColumnPrefWidth" text="Début"/>
                                <TableColumn fx:id="echeanceColumn" prefWidth="$echeanceColumnPrefWidth"
                                             text="Echéance"/>
                            </columns>
                        </TableColumn>
                        <TableColumn fx:id="importanceColumn" prefWidth="$importanceColumnPrefWidth" text="Importance"/>
                        <TableColumn fx:id="chargeColumn" prefWidth="$chargeColumnPrefWidth" text="Charge"
                                     styleClass="charge-column"/>
                        <TableColumn fx:id="ressourceColumn" prefWidth="$ressourceColumnPrefWidth" text="Rsrc"/>
                        <TableColumn fx:id="profilColumn" prefWidth="$profilColumnPrefWidth" text="Profil"/>
                    </columns>
                </TableColumn>
                <TableColumn text="Planification">
                    <columns>
                        <TableColumn fx:id="semaine1Column" prefWidth="$semaineColumnPrefWidth" text="S+1"
                                     styleClass="periodeChargee-column" sortable="false"/>
                        <TableColumn fx:id="semaine2Column" prefWidth="$semaineColumnPrefWidth" text="S+2"
                                     styleClass="periodeChargee-column" sortable="false"/>
                        <TableColumn fx:id="semaine3Column" prefWidth="$semaineColumnPrefWidth" text="S+3"
                                     styleClass="periodeChargee-column" sortable="false"/>
                        <TableColumn fx:id="semaine4Column" prefWidth="$semaineColumnPrefWidth" text="S+4"
                                     styleClass="periodeChargee-column" sortable="false"/>
                        <TableColumn fx:id="semaine5Column" prefWidth="$semaineColumnPrefWidth" text="S+5"
                                     styleClass="periodeChargee-column" sortable="false"/>
                        <TableColumn fx:id="semaine6Column" prefWidth="$semaineColumnPrefWidth" text="S+6"
                                     styleClass="periodeChargee-column" sortable="false"/>
                        <TableColumn fx:id="semaine7Column" prefWidth="$semaineColumnPrefWidth" text="S+7"
                                     styleClass="periodeChargee-column" sortable="false"/>
                        <TableColumn fx:id="semaine8Column" prefWidth="$semaineColumnPrefWidth" text="S+8"
                                     styleClass="periodeChargee-column" sortable="false"/>
                        <TableColumn fx:id="semaine9Column" prefWidth="$semaineColumnPrefWidth" text="S+9"
                                     styleClass="periodeChargee-column" sortable="false"/>
                        <TableColumn fx:id="semaine10Column" prefWidth="$semaineColumnPrefWidth" text="S+10"
                                     styleClass="periodeChargee-column" sortable="false"/>
                        <TableColumn fx:id="semaine11Column" prefWidth="$semaineColumnPrefWidth" text="S+11"
                                     styleClass="periodeChargee-column" sortable="false"/>
                        <TableColumn fx:id="semaine12Column" prefWidth="$semaineColumnPrefWidth" text="S+12"
                                     styleClass="periodeChargee-column" sortable="false"/>

                        <TableColumn fx:id="chargePlanifieeColumn" text="Charge planifiée" prefWidth="60"
                                     editable="false" styleClass="nonModifiable, chargePlanifiee-column"/>
                    </columns>
                </TableColumn>
            </columns>
            <!--Rq : Le tag "sortOrder" doit arriver après les tags "TableColumn" qu'il référence, sinon erreur du load du FXML !-->
            <sortOrder>
                <fx:reference source="categorieColumn"/>
                <fx:reference source="sousCategorieColumn"/>
                <fx:reference source="projetAppliColumn"/>
                <fx:reference source="echeanceColumn"/>
                <fx:reference source="noTicketIdalColumn"/>
            </sortOrder>
            <contextMenu>
                <ContextMenu fx:id="tachesTableContextMenu">
                    <items>
                        <MenuItem text="Voir la ressource humaine de la tâche" onAction="#afficherRessourceHumaine"/>
                        <MenuItem text="Voir le profil de la tâche" disable="true"/> <!--TODO FDA 2017/08 Coder.-->
                        <MenuItem text="Voir le projet/appli de la tâche"
                                  disable="true"/> <!--TODO FDA 2017/08 Coder.-->
                        <MenuItem text="Voir l'importance de la tâche" disable="true"/> <!--TODO FDA 2017/08 Coder.-->
                        <MenuItem text="Voir la tâche dans la liste des tâches" onAction="#afficherTache"/>
                        <!-- TODO FDA 2017/08 'accelerator="Shortcut+Shift+T"' ne fonctionne pas, c'est le menu "Gestion > Tâches" qui capte le clic souris,sans doute parce que le menu contextuel n'est pas affiché qd on entre Ctrl+Shift+T. -->
                        <MenuItem text="Voir la tâche dans l'outil de ticketing (IDAL)"
                                  onAction="#afficherTacheDansOutilTicketing"/>
                        <SeparatorMenuItem/>
                        <MenuItem text="Supprimer" onAction="#supprimer" accelerator="DELETE"/>
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableViewAvecCalendrier>
    </center>
    <bottom>
        <AnchorPane>
            <ButtonBar>
                <buttons>
                    <Button text="_Ajouter une tâche" onAction="#ajouterTache"/>
                </buttons>
            </ButtonBar>
        </AnchorPane>
    </bottom>
</BorderPane>
