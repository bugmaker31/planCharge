                                        </columns>
                                    </TableColumn>
                                    <TableColumn fx:id="importanceColumn" text="Importance" prefWidth="$importanceColumnPrefWidth" styleClass="importance-column"/>
                                    <TableColumn fx:id="chargeColumn" text="Charge" prefWidth="$chargeColumnPrefWidth"
                                                 styleClass="charge-column"/>
                                    <TableColumn text="Ressource">
                                        <columns>
                                            <TableColumn fx:id="ressourceColumn" text="Trigramme" prefWidth="$ressourceColumnPrefWidth"
                                                         styleClass="ressource-column"/>
                                            <TableColumn fx:id="profilColumn" text="Profil" prefWidth="$profilColumnPrefWidth"
                                                         styleClass="profil-column"/>
                                        </columns>
                                    </TableColumn>
                                </columns>
                            </TableColumn>
                            <TableColumn text="Planification">
                                <columns>
                                    <TableColumn fx:id="semaine1Column" prefWidth="$semaineColumnPrefWidth" text="S+1"
                                                 styleClass="periodeChargee-column" sortable="true"/>
                                    <TableColumn fx:id="semaine2Column" prefWidth="$semaineColumnPrefWidth" text="S+2"
