          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
>
    <!--TODO FDA 2017/10 Mettre les codes couleur, les tailles des polices, etc. dans la CSS.-->
    <fx:define>
        <String fx:id="ICON_SIZE" fx:value="48px"/>
    </fx:define>
    <FontAwesomeIconView fx:id="modeleLienEntreEtapesView" glyphName="LONG_ARROW_RIGHT" size="$ICON_SIZE" glyphStyle="-fx-fill: black"/>
    <FontAwesomeIconView fx:id="modeleEtapeCouranteView" glyphName="CIRCLE" size="$ICON_SIZE" glyphStyle="-fx-fill: black"/>
    <FontAwesomeIconView fx:id="modeleEtapeNonCouranteView" glyphName="CIRCLE_THIN" size="$ICON_SIZE" glyphStyle="-fx-fill: black"/>
    <Label fx:id="noEtapeCouranteLabel" style="-fx-text-fill: yellow; -fx-font-size: 24pt"/>
</GridPane>
