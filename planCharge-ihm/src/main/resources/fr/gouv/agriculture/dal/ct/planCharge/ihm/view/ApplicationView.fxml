                </Menu>
                <Menu mnemonicParsing="false" text="Editer">
                    <items>
                        <MenuItem accelerator="Shortcut+Z" mnemonicParsing="true" onAction="#annuler" text="_Annuler/Défaire" />
                        <MenuItem accelerator="Shortcut+Shift+Y" mnemonicParsing="true" onAction="#refaire" text="_Refaire" />
                    </items>
                </Menu>
                <Menu disable="true" mnemonicParsing="true" text="_Suivi" />
                <Menu mnemonicParsing="true" text="_Référentiels">
                    <items>
                        <MenuItem disable="true" mnemonicParsing="false" text="Jours fériés" />
