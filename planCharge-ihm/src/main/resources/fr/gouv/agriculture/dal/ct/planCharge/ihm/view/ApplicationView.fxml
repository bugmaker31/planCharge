                <Menu disable="true" mnemonicParsing="false" text="TODOs">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Action 1" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Aide">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#aPropos" text="A propos" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <TabPane fx:id="gestionTabPane" tabClosingPolicy="UNAVAILABLE">
            <Tab fx:id="disponibilitesTab" text="Disponibilités">
                <fx:include source="ModuleDisponibilitesView.fxml" />
            </Tab>
            <Tab fx:id="tachesTab" text="Tâches">
                <fx:include source="ModuleTachesView.fxml" />
            </Tab>
            <Tab fx:id="chargesTab" text="Charge">
                <fx:include source="ModuleChargesView.fxml" />
            </Tab>
        </TabPane>
    </center>
    <bottom>
        <AnchorPane fx:id="barreEtat" BorderPane.alignment="CENTER">
            <HBox spacing="10.0">
                <padding>
                    <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                </padding>
                <HBox alignment="CENTER">
                    <CheckBox fx:id="sauvegardeRequiseCheckbox" disable="true">
                        <tooltip>
                            <Tooltip text="Si coché, il faut sauvegarder avant de quitter pour ne pas perdre de travail." />
                        </tooltip>
                    </CheckBox>
                    <Label text="Modifié ?">
